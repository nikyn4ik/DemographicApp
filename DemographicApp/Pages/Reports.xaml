<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemographicApp.Pages.Reports">

    <VerticalStackLayout Padding="10">
        <Label 
            Text="Ранее созданные отчёты"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <CollectionView x:Name="ReportsCollectionView" 
                        SelectionMode="Single" 
                        SelectionChanged="OnReportSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontSize="Medium" />
                            <Label Text="{Binding GeneratedOn, StringFormat='Generated on: {0:MM/dd/yyyy}'}" FontSize="Small" TextColor="Gray" />
                            <Label Text="{Binding GeneratedBy}" FontSize="Small" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>