<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemographicApp.Pages.CreateAdmin">

    <StackLayout Padding="20">
        <Label Text="Создание администратора"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="Large"
               Padding="10"
               TextColor="Black" />

        <Label Text="Имя пользователя:" />
        <Entry x:Name="UserNameEntry" Placeholder="Введите имя пользователя" />

        <Label Text="Пароль:" />
        <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" />

        <Button Text="Зарегистрировать" Clicked="OnRegisterButtonClicked" />

        <Label x:Name="ErrorMessageLabel" TextColor="Red" />
    </StackLayout>
</ContentPage>