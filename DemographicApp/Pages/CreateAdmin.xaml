<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemographicApp.Pages.CreateAdmin">

    <StackLayout Padding="20">
        <Label Text="Создание администратора" FontSize="Large" HorizontalOptions="Center" />
        <Label Text="Имя пользователя:" />
        <Entry Text="{Binding UserName, Mode=TwoWay}" Placeholder="Введите имя пользователя" />

        <Label Text="Пароль:" />
        <Entry Text="{Binding Password, Mode=TwoWay}" Placeholder="Введите пароль" IsPassword="True" />

        <Button Text="Зарегистрировать" Command="{Binding RegisterCommand}" />

        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>
