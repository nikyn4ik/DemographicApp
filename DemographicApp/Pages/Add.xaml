<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemographicApp.Pages.Add">
    <StackLayout Padding="20">
        <Label Text="Добавление региона"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="Large"
               Padding="10"
               TextColor="Black" />

        <StackLayout Padding="10">
            <Entry x:Name="RegionNameEntry" Placeholder="Название региона" />
            <Entry x:Name="PopulationEntry" Placeholder="Население" Keyboard="Numeric" />
            <Entry x:Name="BirthRateEntry" Placeholder="Рождаемость" Keyboard="Numeric" />
            <Entry x:Name="DeathRateEntry" Placeholder="Смертность" Keyboard="Numeric" />
            <Entry x:Name="MalePopulationEntry" Placeholder="Мужское население" Keyboard="Numeric" />
            <Entry x:Name="FemalePopulationEntry" Placeholder="Женское население" Keyboard="Numeric" />
            <Button Text="Сохранить" Clicked="OnSaveButtonClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
