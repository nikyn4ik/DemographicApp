<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemographicApp.Pages.Login">

    <StackLayout Padding="10">
        <Label Text="Вход"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="Large"
               Padding="10"
               TextColor="Black" />

        <Label Text="Логин" />
        <Entry x:Name="UsernameEntry" Placeholder="Введите имя пользователя" />

        <Label Text="Пароль" />
        <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" />

        <Button Text="Войти" Clicked="OnLoginButtonClicked" />

        <Label x:Name="ErrorMessageLabel" TextColor="Red" />
        <Button Text="Регистрация" Clicked="OnRegisterButtonClicked" />
    </StackLayout>
</ContentPage>
