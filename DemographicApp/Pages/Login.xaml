<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemographicApp.Pages.Login">

    <StackLayout Padding="10">
        <Label Text="Вход" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Логин"/>
        <Entry Text="{Binding Username}" Placeholder="Введите имя пользователя" />

        <Label Text="Пароль" />
        <Entry Text="{Binding Password}" Placeholder="Введите пароль" IsPassword="True" />

        <Button Text="Войти" Command="{Binding LoginCommand}" />

        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
        <Button Text="Регистрация"
                Command="{Binding RegisterCommand}" />
    </StackLayout>
</ContentPage>